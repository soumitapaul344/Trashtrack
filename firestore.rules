rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow all authenticated users full access (for development)
    // In production, restrict this based on user roles
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /Rider/{userId} {
      allow read, write: if request.auth != null;
    }

    match /Cleaner/{userId} {
      allow read, write: if request.auth != null;
    }

    match /riders/{userId} {
      allow read, write: if request.auth != null;
    }

    match /cleaners/{userId} {
      allow read, write: if request.auth != null;
    }

    match /citizens/{userId} {
      allow read, write: if request.auth != null;
    }

    match /Citizen/{userId} {
      allow read, write: if request.auth != null;
    }

    match /pickup_requests/{requestId} {
      allow read, write: if request.auth != null;
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
